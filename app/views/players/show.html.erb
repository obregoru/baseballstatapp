<p id="notice"><%= notice %></p>

<p>
  <b>Team:</b>
    <%= link_to( @player.team.team_name, team_path(@player.team_id) )%>
</p>

<p>
  <b>Legacy:</b>
  <%= @player.legacy_id %>
</p>

<p>
  <b>First name:</b>
  <%= @player.first_name %>
</p>

<p>
  <b>Last name:</b>
  <%= @player.last_name %>
</p>
<p><%= link_to 'Add photo',"/players/#{@player.id}" + '/photos/new' %></p>
<% @player.photos.each do |p|%>
<p><%= image_tag('/images/' + p.file_name.to_s )  rescue 'No Image'%></p>

<%end%>
<%= link_to 'Edit', edit_player_path(@player) %> |
<%= link_to 'Back', players_path %>
