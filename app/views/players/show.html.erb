<p id="notice"><%= notice %></p>

<p>
  <b>Team:</b>
    <%= link_to( @player.team.team_name, team_path(@player.team_id) )%>
</p>

<p>
  <b>Legacy:</b>
  <%= @player.legacy_id %>
</p>

<p>
  <b>First name:</b>
  <%= @player.first_name %>
</p>

<p>
  <b>Last name:</b>
  <%= @player.last_name %>
</p>
<h3>Batting statistics</h3>
<table class='stats'>
  <tr>
	<th>Year</th>
	<th>Team</th>
    <th>AB</th>
    <th>H</th>
    <th>2B</th>
    <th>3B</th>
    <th>HR</th>
    <th>RBI</th>
	<th>Bat Avb</th>
	<th>Slug %</th>
  </tr>
  
<% @stats.each do |s|%>
<tr>
	<td><%= s.batting_year %></td> 
	<td><%= link_to( s.team.team_name, team_path(s.team_id) )%></td>
    <td><%= s.at_bats %></td>
    <td><%= s.hits %></td>
    <td><%= s.doubles %></td>
    <td><%= s.triples %></td>
    <td><%= s.home_runs %></td>
    <td><%= s.runs_batted %></td>
	<td><%= s.batting_average %></td>
	<td><%= s.slugging_percentage %></td>
</tr>

<% end%>
</table>
<p><%= link_to 'Add photo',"/players/#{@player.id}" + '/photos/new' %></p>
<% @player.photos.each do |p|%>
<p><%= image_tag('/images/' + p.file_name.to_s )  rescue 'No Image'%></p>
<% end %>
<%= link_to 'Edit', edit_player_path(@player) %> |
<%= link_to 'Back', players_path %>
